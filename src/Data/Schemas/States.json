{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "$id": "state_schema",
    "title": "State Schema",
    "description": "Json schema for discord status states and locations",
    "type": "object",
    "required": [ "chapters" ],
    "properties": {
        "chapters": {
            "description": "array of chapters",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "states": {
                        "type": "array",
                        "items": {
                            "$ref": "#/$defs/state"
                        }
                    }
                }
            }
        }
    },
    "$defs": {
        "images": {
            "type": "string",
            "enum": [
                "placeholder"
            ]
        },

        "state": {
            "type": "object",
            "required": [ "id", "details", "large_image" ],
            "properties": {
                "id": { "type": "string" },
                "place": {"type": "string"},
                "details": { "type": "string" },
                "state": { "type": "string"},
                "large_image": { "$ref": "#/$defs/images"},
                "large_image_text": { "type": "string"},
                "small_image": { "$ref": "#/$defs/images"},
                "small_image_text": { "type": "string" }
            }
        }
    }
}